@model OnlineLibrary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Book</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this book? This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" class="img-fluid rounded mb-3" alt="@Model.Name">
                    }
                    else
                    {
                        <img src="/img/book-placeholder.jpg" class="img-fluid rounded mb-3" alt="@Model.Name">
                    }
                </div>

                <div class="col-md-8">
                    <h2>@Model.Name</h2>
                    <h5 class="text-muted mb-3">by @Model.Author</h5>

                    <dl class="row">
                        <dt class="col-sm-3">Release Date:</dt>
                        <dd class="col-sm-9">@Model.ReleaseDate.ToString("MMMM d, yyyy")</dd>

                        @if (!string.IsNullOrEmpty(Model.ISBN))
                        {
                            <dt class="col-sm-3">ISBN:</dt>
                            <dd class="col-sm-9">@Model.ISBN</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Genre))
                        {
                            <dt class="col-sm-3">Genre:</dt>
                            <dd class="col-sm-9">@Model.Genre</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Language))
                        {
                            <dt class="col-sm-3">Language:</dt>
                            <dd class="col-sm-9">@Model.Language</dd>
                        }

                        @if (Model.Pages > 0)
                        {
                            <dt class="col-sm-3">Pages:</dt>
                            <dd class="col-sm-9">@Model.Pages</dd>
                        }

                        <dt class="col-sm-3">Available Copies:</dt>
                        <dd class="col-sm-9">@Model.AvailableCopies</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <h5>Description</h5>
                        <p>@Model.Description</p>
                    }
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="BookId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/books-delete.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />