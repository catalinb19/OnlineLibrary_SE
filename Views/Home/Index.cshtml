@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1>Welcome to Online Library</h1>
            <p>Discover thousands of books, explore new genres, and find your next favorite read. Our digital library is open 24/7 for all your reading needs.</p>

            <form action="@Url.Action("SearchResults", "Home")" method="get">
                <div class="search-container">
                    <div class="input-group">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search for a book or author...">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <!-- Popular Books Section -->
    <div class="container book-section">
        <h2 class="left-aligned-heading">Popular Books</h2>
        <div class="row">
            @foreach (var book in ViewBag.PopularBooks)
            {
                double avgRating = ViewBag.AverageRatings[book.BookId];

                <div class="col-6 col-md-2 book-card">
                    <a href="@Url.Action("BookPage", "BookManagement", new { id = book.BookId })">
                        <img src="/img/@book.CoverImageUrl" alt="@book.Name" />
                    </a>
                    <p>@book.Name by @book.Author</p>
                    <p>Rating: @avgRating.ToString("0.0") ★</p>
                </div>
            }
        </div>
    </div>

    <!-- New Books Section -->
    <div class="container book-section">
        <h2 class="left-aligned-heading">New Books</h2>
        <div class="row">
            @foreach (var book in ViewBag.NewBooks)
            {
                <div class="col-6 col-md-2 book-card">
                    <a href="@Url.Action("BookPage", "BookManagement", new { id = book.BookId })">
                        <img src="/img/@book.CoverImageUrl" alt="@book.Name" />
                    </a>
                    <p>@book.Name by @book.Author</p>
                </div>
            }
        </div>
    </div>


    <div class="container features-section">
        <h2>Why Choose Our Online Library</h2>
        <div class="row">
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-book-reader"></i>
                </div>
                <h4>Vast Collection</h4>
                <p>Access thousands of books across various genres, from classics to the latest bestsellers.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h4>Read Anywhere</h4>
                <p>Enjoy your books on any device, anytime, anywhere with our responsive platform.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h4>Community</h4>
                <p>Join reading groups, share reviews, and connect with fellow book lovers.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <h4>Affordable</h4>
                <p>Our membership plans are designed to fit every budget, with special discounts for students.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4>New Arrivals</h4>
                <p>We regularly update our collection with the latest releases and trending books.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Our dedicated support team is always ready to assist you with any questions or issues.</p>
            </div>
        </div>
    </div>
</body>
</html>

