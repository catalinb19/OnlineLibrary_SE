@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1>Welcome to Online Library</h1>
            <p>Discover thousands of books, explore new genres, and find your next favorite read. Our digital library is open 24/7 for all your reading needs.</p>

            <div class="search-container">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for books, authors, or genres...">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container book-section">
        <h2 class="left-aligned-heading">Popular Books</h2>
        <div class="row">
            <div class="col-6 col-md-2 book-card">
                <img src="/img/book1.jpg" alt="Book 1" />
                <p>Where the Crawdads Sing by Delia Owens</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book2.jpg" alt="Book 2" />
                <p>The Great Gatsby by F. Scott Fitzgerald</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book3.jpg" alt="Book 3" />
                <p>1984 by George Orwell</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book4.jpg" alt="Book 4" />
                <p>To Kill a Mockingbird by Harper Lee</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book5.jpg" alt="Book 5" />
                <p>Harry Potter and the Sorcerer's Stone by J.K. Rowling</p>
            </div>
        </div>
    </div>

    <div class="container book-section">
        <h2 class="left-aligned-heading">New Books</h2>
        <div class="row">
            <div class="col-6 col-md-2 book-card">
                <img src="/img/book6.jpeg" alt="New Book 1" />
                <p>The Invisible Life of Addie LaRue by V.E. Schwab</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book7.jpeg" alt="New Book 2" />
                <p>Project Hail Mary by Andy Weir</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book8.jpeg" alt="New Book 3" />
                <p>The Midnight Library by Matt Haig</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book9.jpg" alt="New Book 4" />
                <p>Klara and the Sun by Kazuo Ishiguro</p>
            </div>

            <div class="col-6 col-md-2 book-card">
                <img src="/img/book10.jpg" alt="New Book 5" />
                <p>The Last House on Needless Street by Catriona Ward</p>
            </div>
        </div>
    </div>

    <div class="container features-section">
        <h2>Why Choose Our Online Library</h2>
        <div class="row">
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-book-reader"></i>
                </div>
                <h4>Vast Collection</h4>
                <p>Access thousands of books across various genres, from classics to the latest bestsellers.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h4>Read Anywhere</h4>
                <p>Enjoy your books on any device, anytime, anywhere with our responsive platform.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-user-friends"></i>
                </div>
                <h4>Community</h4>
                <p>Join reading groups, share reviews, and connect with fellow book lovers.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <h4>Affordable</h4>
                <p>Our membership plans are designed to fit every budget, with special discounts for students.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h4>New Arrivals</h4>
                <p>We regularly update our collection with the latest releases and trending books.</p>
            </div>
            <div class="col-md-4 feature-item">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Our dedicated support team is always ready to assist you with any questions or issues.</p>
            </div>
        </div>
    </div>




</body>
</html>